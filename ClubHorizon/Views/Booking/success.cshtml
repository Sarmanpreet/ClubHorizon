
@{
    ViewBag.Title = "success";
}


@model IList<ClubHorizon.Data.DBModel.BookingDtlInfo>


<div class="content success-page-cont">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">

                <div class="card success-card">
                    <div class="card-body">
                        <div class="success-cont">
                            <i class="fas fa-check"></i>
                            <h3>Appointment booked Successfully!</h3>
                            <p>
                                Appointment booked with <strong> Golfers Horizon</strong><br> on
                                @foreach (var item in Model)
                                {
                                    <strong> @Convert.ToDateTime( item.Date).ToShortDateString() (@item.TimeSlots), </strong>

                                }

                            </p>
                            @*<a href="invoice-view.html" class="btn btn-primary view-inv-btn">View Invoice</a>*@
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


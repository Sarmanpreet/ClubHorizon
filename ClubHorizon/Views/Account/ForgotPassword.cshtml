@model ClubHorizon.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}



<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">

                <div class="account-content">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-md-7 col-lg-6 login-left">
                            <img src="~/Content/assets/img/login-banner.png" class="img-fluid" alt="Golf Courses Login">
                        </div>
                        <div class="col-md-12 col-lg-6 login-right">
                            <div class="login-header">
                                <h3>Forgot Password?</h3>
                            </div>
                            @using (Html.BeginForm("ForgotPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="form-group form-focus">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control floating" })
                                    @Html.LabelFor(m => m.Email, new { @class = " focus-label" })
                                </div>
                                <button class="btn btn-primary btn-block btn-lg login-btn w-100" type="submit">Reset Password </button>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



